{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "ansible": {
    "fileMatch": ["(^|/)tasks/.+\\.ya?ml$"]
  },
  "autodiscover": false,
  "automerge": true,
  "git-submodules": {
    "enabled": true
  },
  "onboarding": false,
  "pip-compile": {
    "fileMatch": ["(^|/)requirements\\.in$"]
  },
  "pip_requirements": {
    "enabled": false
  },
  "platform": "github",
  "prConcurrentLimit": 1,
  "pre-commit": {
    "enabled": true
  },
  "repositories": ["zephyros-dev/media-server"]
}
