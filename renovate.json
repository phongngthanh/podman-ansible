{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "ansible": {
    "fileMatch": ["(^|/)tasks/.+\\.ya?ml$"]
  },
  "automerge": true,
  "automergeType": "branch",
  "extends": ["github>aquaproj/aqua-renovate-config#1.6.0"],
  "git-submodules": {
    "enabled": true
  },
  "ignoreTests": true,
  "lockFileMaintenance": {
    "enabled": true
  },
  "onboarding": false,
  "packageRules": [
    {
      "automerge": true,
      "automergeType": "branch",
      "matchPaths": [
        "!.github/**",
        "!group_vars/**",
        "!requirements.yaml",
        "!roles/**",
        "!submodules/**"
      ]
    },
    {
      "groupName": "immich",
      "matchPackagePrefixes": ["ghcr.io/immich-app"]
    }
  ],
  "pip-compile": {
    "fileMatch": ["(^|/)requirements\\.in$"]
  },
  "pip_requirements": {
    "fileMatch": ["(^|/)requirements\\.in$"]
  },
  "platform": "github",
  "platformAutomerge": true,
  "prConcurrentLimit": 1,
  "pre-commit": {
    "enabled": true
  },
  "rebaseWhen": "auto",
  "regexManagers": [
    {
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "aquaproj/aqua",
      "fileMatch": ["Dockerfile", "helper.py"],
      "matchStrings": ["AQUA_VERSION=(?<currentValue>.*?)\n"]
    },
    {
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "trapexit/mergerfs",
      "fileMatch": ["mergerfs.yaml"],
      "matchStrings": ["mergerfs_version: \"(?<currentValue>.*?)\"\n"]
    }
  ],
  "repositories": ["zephyros-dev/media-server"]
}
