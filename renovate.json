{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "ansible": {
    "fileMatch": ["(^|/)tasks/.+\\.ya?ml$"]
  },
  "automerge": true,
  "extends": ["github>aquaproj/aqua-renovate-config#1.5.2"],
  "git-submodules": {
    "enabled": true
  },
  "onboarding": false,
  "packageRules": [
    {
      "groupName": "immich",
      "matchPackagePrefixes": ["docker.io/altran1502/immich"]
    }
  ],
  "pip-compile": {
    "fileMatch": ["(^|/)requirements\\.in$"]
  },
  "pip_requirements": {
    "enabled": false
  },
  "platform": "github",
  "prConcurrentLimit": 1,
  "pre-commit": {
    "enabled": true
  },
  "rebaseWhen": "auto",
  "regexManagers": [
    {
      "datasourceTemplate": "github-releases",
      "depNameTemplate": " aquaproj/aqua",
      "fileMatch": ["^Dockerfile$"],
      "matchStrings": ["ENV AQUA_VERSION==(?<currentValue>.*?)\\n"]
    }
  ],
  "repositories": ["zephyros-dev/media-server"]
}
