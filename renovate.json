{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "ansible": {
    "fileMatch": ["(^|/)tasks/.+\\.ya?ml$"]
  },
  "automerge": true,
  "automergeType": "branch",
  "git-submodules": {
    "enabled": true
  },
  "pip-compile": {
    "fileMatch": ["(^|/)requirements\\.in$"]
  },
  "pre-commit": {
    "enabled": true
  }
}
