{
  "build": {
    "args": {
      "SOPS_VERSION": "3.7.3",
      "USERNAME": "vscode"
    },
    "dockerfile": "Dockerfile"
  },
  "containerUser": "vscode",
  "customizations": {
    "vscode": {
      "extensions": [
        "GitHub.vscode-pull-request-github",
        "Grafana.vscode-jsonnet",
        "bierner.markdown-mermaid",
        "eamodio.gitlens",
        "esbenp.prettier-vscode",
        "mhutchie.git-graph",
        "ms-azuretools.vscode-docker",
        "njpwerner.autodocstring",
        "pascalreitermann93.vscode-yaml-sort",
        "redhat.ansible",
        "richie5um2.vscode-sort-json",
        "samuelcolvin.jinjahtml",
        "signageos.signageos-vscode-sops",
        "tyriar.sort-lines",
        "wholroyd.jinja",
        "yzhang.markdown-all-in-one"
      ],
      "settings": {
        "[json]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[jsonc]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[python]": {
          "editor.codeActionsOnSave": {
            "source.organizeImports": true
          }
        },
        "[yaml]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "editor.codeActionsOnSave": {
          "source.fixAll.sortJSON": true
        },
        "editor.formatOnSave": true,
        "files.associations": {
          "**/handlers/**/*.yaml": "ansible",
          "**/tasks/**/*.yaml": "ansible"
        },
        "python.formatting.provider": "black",
        "sops.creationEnabled": true
      }
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:1": {}
  },
  "initializeCommand": "./.devcontainer/initializeCommand.sh",
  "mounts": [
    "source=${localEnv:HOME}/.config/sops/age/keys.txt,target=/home/vscode/.config/sops/age/keys.txt,type=bind",
    "source=${localEnv:HOME}/.local/share/fish,target=/home/vscode/.local/share/fish,type=bind",
    "source=${localEnv:HOME}/.ssh,target=/home/vscode/.ssh,type=bind",
    "source=ansible-cache,target=/home/vscode/.ansible,type=volume,U=true"
  ],
  "name": "Infra",
  "postStartCommand": "ansible-playbook .devcontainer/playbook.yaml",
  "remoteEnv": {
    "EDITOR": "code --wait"
  },
  "remoteUser": "vscode",
  "runArgs": ["--userns=keep-id", "--platform=linux/amd64"]
}
