FROM docker.io/caddy:2.8.4-builder-alpine@sha256:ae1e0367c86a6adaf620ce70ad4a6b04b04c2f27f5d1ae3e75c17ce53591ff69 AS builder

# Using specific build version until caddy release a new version: https://github.com/caddyserver/caddy/issues/6209
RUN --mount=type=cache,target=/go/pkg,sharing=locked \
    xcaddy build e1f4b83ffaa861e8f383ba52108e6449b53217f2 \
    --with github.com/caddy-dns/dynv6 \
    --with github.com/mholt/caddy-dynamicdns

FROM docker.io/caddy:2.8.4-alpine@sha256:a48e22edad925dc216fd27aa4f04ec49ebdad9b64c9e5a3f1826d0595ef2993c

COPY --from=builder /usr/bin/caddy /usr/bin/caddy
