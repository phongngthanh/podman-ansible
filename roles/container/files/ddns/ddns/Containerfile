FROM docker.io/caddy:2.8.4-builder-alpine@sha256:108605ea8e6056e0e8431c5958c7522d8cfc66bb58a2de75697ff03a78938621 AS builder

RUN --mount=type=cache,target=/go/pkg,sharing=locked \
    xcaddy build \
    --with github.com/caddy-dns/dynv6 \
    --with github.com/mholt/caddy-dynamicdns

FROM docker.io/caddy:2.8.4-alpine@sha256:b29f8188b594a5dc462553f5488b4f268294c622add2bfe0e775541bbe08130a

COPY --from=builder /usr/bin/caddy /usr/bin/caddy
