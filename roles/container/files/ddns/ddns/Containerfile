FROM docker.io/caddy:2.8.4-builder-alpine@sha256:1c33d0345e6b45753db373aea1300e4ad29618ee2e8c25f8e7342e6a076c970f AS builder

RUN --mount=type=cache,target=/go/pkg,sharing=locked \
    xcaddy build \
    --with github.com/caddy-dns/dynv6 \
    --with github.com/mholt/caddy-dynamicdns

FROM docker.io/caddy:2.8.4-alpine@sha256:a5e86b169f1c895c30acd012b0b1ba1330d8092c2556d7569d9f184db285d395

COPY --from=builder /usr/bin/caddy /usr/bin/caddy
