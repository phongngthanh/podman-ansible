FROM docker.io/caddy:2.7.6-builder@sha256:884d7220deab28816c2da00020bc5b214967b8c8782ed8a06676f09cfbd88780 AS builder

RUN --mount=type=cache,target=/go/pkg,sharing=locked \
    xcaddy build \
    --with github.com/caddy-dns/dynv6 \
    --with github.com/mholt/caddy-dynamicdns

FROM docker.io/caddy:2.7.6-alpine@sha256:dda81a416214d4dbdd978810efa19643e39b626fe0f979558fbb116758784c89

COPY --from=builder /usr/bin/caddy /usr/bin/caddy
