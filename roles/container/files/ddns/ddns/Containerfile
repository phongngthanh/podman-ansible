FROM docker.io/caddy:2.7.6-builder@sha256:21a65a0a75ae568aee31a119e17fcbba1cbad3f5895ba720ef9f8d58326636f2 AS builder

RUN --mount=type=cache,target=/go/pkg,sharing=locked \
    xcaddy build \
    --with github.com/caddy-dns/dynv6 \
    --with github.com/mholt/caddy-dynamicdns

FROM docker.io/caddy:2.7.6-alpine@sha256:80ca561981768b2c3568cc4bef3d4cd1f11c2a625c806bedeb8453aef98779a0

COPY --from=builder /usr/bin/caddy /usr/bin/caddy
