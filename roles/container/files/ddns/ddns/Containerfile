FROM docker.io/caddy:2.7.6-builder@sha256:e4e6def23b2b2ddd4fc962e9e8871d2e1049909f09428e7d3455f3e9fe937126 AS builder

RUN --mount=type=cache,target=/go/pkg,sharing=locked \
    xcaddy build \
    --with github.com/caddy-dns/dynv6 \
    --with github.com/mholt/caddy-dynamicdns

FROM docker.io/caddy:2.7.6-alpine@sha256:eabac2898cf9fc7dc94d3fb03ac84c9c923aa6cc6f04874937d2f525e0d2f006

COPY --from=builder /usr/bin/caddy /usr/bin/caddy
