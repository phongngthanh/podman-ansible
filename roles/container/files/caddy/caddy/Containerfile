FROM docker.io/caddy:2.8.4-builder@sha256:bbc5f9130a3ec4713c8f5dc73d2a0f8eb7e452e67ac29e8b0df2f0959dce69d5 AS builder

RUN --mount=type=cache,target=/go/pkg,sharing=locked \
    xcaddy build \
    --with github.com/caddy-dns/dynv6

FROM docker.io/caddy:2.8.4-alpine@sha256:08a8ebcd6788135c1706639cd21263a30a4fc0dce21bf7cd8c623b86291b016d

COPY --from=builder /usr/bin/caddy /usr/bin/caddy
