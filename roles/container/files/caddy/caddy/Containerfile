FROM docker.io/caddy:2.7.6-builder@sha256:a8053d86bad595f8230e02939f9504243321790577a8cb899a30d5587c40c217 AS builder

RUN --mount=type=cache,target=/go/pkg,sharing=locked \
    xcaddy build \
    --with github.com/caddy-dns/dynv6

FROM docker.io/caddy:2.7.6-alpine@sha256:d15d157a2f3af03fd8054627d1af242c9886262e25b85bcb847eea7fe43bbac8

COPY --from=builder /usr/bin/caddy /usr/bin/caddy
