FROM docker.io/caddy:2.7.6-builder@sha256:c4ca919a359a82291778345c9886a9cf948d4e4613aee402066f0be8819179ff AS builder

RUN --mount=type=cache,target=/go/pkg,sharing=locked \
    xcaddy build \
    --with github.com/caddy-dns/dynv6

FROM docker.io/caddy:2.7.6-alpine@sha256:2e1d4592f1718bb47645da5a83a846fe19094f18e6c921fdf56d174f05c63213

COPY --from=builder /usr/bin/caddy /usr/bin/caddy
