FROM docker.io/caddy:2.8.4-builder-alpine@sha256:1f3201aa7f4f751c2682d51f2097629b580e50e5ab125fcca26cfb27cc93e383 AS builder

RUN --mount=type=cache,target=/go/pkg,sharing=locked \
    xcaddy build \
    --with github.com/caddy-dns/dynv6

FROM docker.io/caddy:2.8.4-alpine@sha256:7abe52d4350a56f211d5d2f8326b0967818f96e6c3636e89e8b845352a7296d0

COPY --from=builder /usr/bin/caddy /usr/bin/caddy
