#jinja2:lstrip_blocks: True
[Kube]
{% if container_loop_var.value.userns != "" %}
UserNS={{ container_loop_var.value.userns }}
{% endif %}
PodmanArgs=--build
Yaml={{ container_quadlet_path }}/{{ container_loop_var.key }}/deployment.yaml
SetWorkingDirectory=yaml
[Service]
# Restart service when sleep finishes
Restart=always
# Extend Timeout to allow time to pull the image
TimeoutStartSec=900
[Install]
# Start by default on boot
WantedBy=multi-user.target default.target
